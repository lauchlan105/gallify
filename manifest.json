{
    "manifest_version": 2,
    "name": "Gallify",
    "description": "Stream forum content the smart way!",
    "version": "0.1",
    "browser_action": {
        "default_popup": "settings.html"
    },
    "permissions": [
        "activeTab",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://boards.4chan.org/*/thread/*",
                "*://boards.4channel.org/*/thread/*"
            ],
            "js": [
                "js/data collection/4chan.js",
                "js/util.js",
                "js/interface.js",
                "js/classes/App.js",
                "js/classes/Media.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "js/background.js"
        ]
    },
    "web_accessible_resources": [
        "css/*",
        "resources/*"
    ]
}
