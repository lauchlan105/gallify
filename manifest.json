{
    "manifest_version": 2,
    "name": "Stream For Chan",
    "description": "Stream forum content in an intuitive way!",
    "version": "0.1",
    "browser_action": {
        "default_icon": "./settings/icon.jpg",
        "default_popup": "./settings/settings.html"
    },
    "permissions": [
        "activeTab",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": ["*://boards.4chan.org/*/thread/*"],
            "js": [
                "data collection/4chan.js",
                "interface/interface.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "web_accessible_resources": [
        "/interface/*"
    ]
}