{

    "app": {
        "loopAtEnd": true,
        "autoPlay": true,
        "openOnStart": true
    },

    "ui": {
        "size": 100,

        "stage": {
            "color": {
                "r": 0,
                "g": 0,
                "b": 0,
                "a": 0.85
            }
        },

        "gallery": {
            "thumbnailHeight": 1,
            "thumbnailSpacing": 0.02,
            "thumbnailBorder": 0.02,
            "thumbnailOpacity": 0.7
        },

        "buttons": {
            "height": 0.6,
            "margin": 0.2,
            "opacity": 0.5
        },

        "counter": {
            "fontSize": 0.25
        }
    },

    "gif": {
        "include": true,
        "autoStart": true,
        "restartOnSelect": false,
        "duration": 10000,
        "onend": 2
    },

    "video": {
        "include": true,
        "controls": true,
        "autoStart": true,
        "restartOnSelect": true,
        "sound": true,
        "defaultVolume": 0.2,
        "onend": 2
    },

    "picture": {
        "include": true,
        "restartOnSelect": true,
        "duration": 10000,
        "onend": 2
    }

}